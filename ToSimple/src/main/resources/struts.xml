		<!-- User -->
		
		
		<action name="allUsers" class="action.UserAction" method="getAllUsers">
			<result name="success">/questionnaire/jsp/userCRUD.jsp</result>
		</action>
		
		<action name="fetchRSA" class="action.UserAction" method="fetchRSA">
			<result name="success">/questionnaire/jsp/userCRUD.jsp</result>
		</action>
		
		<action name="login" class="action.UserAction" method="login">
			<result name="success">/questionnaire/jsp/userCRUD.jsp</result>
		</action>
		
		
		
		<!-- Questionnaire -->
		
		<action name="addQuestionnaire" class="action.QuestionnaireAction" method="addOrUpdateQuestionnaire">
			<result name="success">/questionnaire/jsp/userCRUD.jsp</result>
		</action>
		
		<action name="findAQuestionnaire" class="action.QuestionnaireAction" method="findAQuestionnaire">
			<result name="success">/questionnaire/jsp/testMongo.jsp</result>
			<result name="error">/questionnaire/jsp/testMongo.jsp</result>
		</action>
		
		<action name="SaveAnAnswerPaper" class="action.QuestionnaireAction" method="addQuestionnaireResult">
			<result name="success">/out/index.html</result>
		</action>
		
		<action name="setQuestionnaireStatus" class="action.QuestionnaireAction" method="setQuestionnaireStatus">
			<result name="success">/questionnaire/jsp/testMongo.jsp</result>
			<result name="error">/questionnaire/jsp/testMongo.jsp</result>
		</action>
		
		
		<action name="*">
			<result>/{1}.jsp</result>
		</action>
